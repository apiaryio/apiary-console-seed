{
  "manifest_version": 2,
  "name": "Apiary Proxy Chrome Extension",
  "version": "1.0.0",
  "externally_connectable": {
    "matches": [
      "http://localhost:*/*",
      "https://localhost:*/*"
    ]
  },
  "background": {
    "scripts": [
      "build/extension.js"
    ],
    "persistent": false
  },

  "permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
